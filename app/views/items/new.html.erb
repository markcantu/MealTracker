<h1>New Meal Item</h1>
<%= form_for :item, url: items_path do |f| %>
  <p>
    <%= f.label :food %><br>
    <%= f.text_field :food %>
  </p>
  
  <p>
    <%= f.label :date %><br>
    <%= f.text_field :date %>
  </p>
  
  <p>
    <%= f.label :calories %><br>
    <%= f.text_field :calories %>
  </p>
 
  <p>
    <%= f.label :notes %><br>
    <%= f.text_area :notes %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>
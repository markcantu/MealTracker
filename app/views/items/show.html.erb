<br>
<%= link_to 'Item List', items_path, class: "create_new_item" %>

<div class="row">
    <div class="column2">
        <h2>Breakfast</h2>
        <p style="width:400px; height:auto">
        <%= image_tag(@item.image1, style: "width: 400px") %>
        </p>
        
        <p>
            <strong class="title_text">Date:</strong>
            <%= @item.date %>
        </p>
        
        <p>
            <strong class="title_text">Food:</strong>
            <%= @item.title1 %>
        </p>
        
        <p>
            <strong class="title_text">Description:</strong>
            <%= @item.text1 %>
        </p>
    </div>
    
    <div class="column2">
        <h2>Lunch</h2>
        <p style="width:400px; height:auto">
        <%= image_tag(@item.image2, style: "width: 400px") %>
        </p>
        
        <p>
            <strong class="title_text">Date:</strong>
            <%= @item.date %>
        </p>
        
        <p>
            <strong class="title_text">Food:</strong>
            <%= @item.title2 %>
        </p>
        
        <p>
            <strong class="title_text">Description:</strong>
            <%= @item.text2 %>
        </p>
    </div>
    
    <div class="column2">
        <h2>Dinner</h2>
        <p style="width:400px; height:auto">
        <%= image_tag(@item.image3, style: "width: 400px")%>
        </p>
        
        <p>
            <strong class="title_text">Date:</strong>
            <%= @item.date %>
        </p>
        
        <p>
            <strong class="title_text">Food:</strong>
            <%= @item.title3 %>
        </p>
        
        <p>
            <strong class="title_text">Description:</strong>
            <%= @item.text3 %>
        </p>
    </div>
</div>

<br>

<h2>Comments</h2>
<% @item.comments.each do |comment| %>
    <p>
        <strong>Note:</strong>
        <%= comment.body %>
    </p>
<% end %>

<br>

<h2>Add a commment:</h2>
<%= form_for([@item, @item.comments.build]) do |f| %>
    <p>
        <%= f.label :Extra_Notes %><br>
        <%= f.text_field :body %>
    </p>
    
    <p>
        <%= f.submit %>
    </p>
<% end %>
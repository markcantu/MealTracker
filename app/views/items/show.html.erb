<p style="width:400px; height:auto">
    <%= image_tag(@item.image, style: "width: 100%") %>
</p>

<p>
    <strong class="title_text">Date:</strong>
    <%= @item.date %>
</p>

<p>
    <strong class="title_text">Food:</strong>
    <%= @item.title %>
</p>

<p>
    <strong class="title_text">Description:</strong>
    <%= @item.text %>
</p>

<br>

<h2>Comments</h2>
<% @item.comments.each do |comment| %>
    <p>
        <strong>Note:</strong>
        <%= comment.body %>
    </p>
<% end %>

<br>

<h2>Add a commment:</h2>
<%= form_for([@item, @item.comments.build]) do |f| %>
    <p>
        <%= f.label :Extra_Notes %><br>
        <%= f.text_area :body %>
    </p>
    
    <p>
        <%= f.submit %>
    </p>
<% end %>

<br><br><br>

<%= link_to 'Item List', items_path, class: "create_new_item" %>